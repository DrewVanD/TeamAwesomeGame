<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".storePage">

    <Button
        android:id="@+id/exitButton"
        android:layout_width="77dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="54dp"
        android:layout_marginStart="18dp"
        android:background="@android:color/transparent"
        android:text="Exit"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        app:srcCompat="@drawable/store" />

    <TextView
        android:id="@+id/storeId"
        android:layout_width="wrap_content"
        android:layout_height="44dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="55dp"
        android:paddingTop="0dp"
        android:text="STORE"
        android:textAppearance="@android:style/TextAppearance.Large"
        android:textColor="@android:color/background_dark"
        android:textSize="36sp"
        android:textStyle="bold|italic"
        app:fontFamily="casual" />

    <Button
        android:id="@+id/healthButton"
        android:layout_width="58dp"
        android:layout_height="37dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="25dp"
        android:layout_marginTop="126dp"
        android:background="@android:color/transparent"
        android:text="Health"
        android:textAppearance="@android:style/TextAppearance.Large"
        android:textSize="18sp"
        android:textStyle="bold|italic"
        android:visibility="visible" />

    <Button
        android:id="@+id/staminaButton"
        android:layout_width="78dp"
        android:layout_height="38dp"
        android:layout_alignTop="@+id/healthButton"
        android:layout_marginEnd="-8dp"
        android:layout_toStartOf="@+id/textView9"
        android:background="@android:color/transparent"
        android:text="Stamina"
        android:textAppearance="@android:style/TextAppearance.Large"
        android:textSize="18sp"
        android:textStyle="bold|italic"
        android:visibility="visible" />

    <Button
        android:id="@+id/glovesButton"
        android:layout_width="64dp"
        android:layout_height="38dp"
        android:layout_alignTop="@+id/healthButton"
        android:layout_marginStart="-9dp"
        android:layout_toEndOf="@+id/textView9"
        android:background="@android:color/transparent"
        android:text="Gloves"
        android:textAppearance="@android:style/TextAppearance.Large"
        android:textSize="18sp"
        android:textStyle="bold|italic"
        android:visibility="visible" />

    <Button
        android:id="@+id/trainButton"
        android:layout_width="44dp"
        android:layout_height="38dp"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/healthButton"
        android:layout_marginEnd="33dp"
        android:background="@android:color/transparent"
        android:text="Train"
        android:textAppearance="@android:style/TextAppearance.Large"
        android:textSize="18sp"
        android:textStyle="bold|italic"
        android:visibility="visible" />

    <Button
        android:id="@+id/upButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="268dp"
        android:text="Up" />

    <Button
        android:id="@+id/downButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/itemView"
        android:layout_alignParentEnd="true"
        android:text="down" />

    <TextView
        android:id="@+id/frontPageText"
        android:layout_width="104dp"
        android:layout_height="68dp"
        android:layout_alignTop="@+id/upButton"
        android:layout_centerHorizontal="true"
        android:gravity="center_vertical|center_horizontal"
        android:text="You lookin' for upgrades?"
        android:textAllCaps="true"
        android:textSize="14sp"
        android:textStyle="bold|italic" />

    <ImageView
        android:id="@+id/itemView"
        android:layout_width="138dp"
        android:layout_height="191dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="216dp"
        app:srcCompat="@drawable/textbubble" />

    <Button
        android:id="@+id/purchaseButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="120dp"
        android:text="purchase" />

    <TextView
        android:id="@+id/itemDesc"
        android:layout_width="82dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/itemName"
        android:layout_centerHorizontal="true"
        android:gravity="center_vertical|center_horizontal"
        android:textAllCaps="true"
        android:textSize="10sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/itemDesc"
        android:layout_centerHorizontal="true"
        android:text="Price"
        android:textColor="#000"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/itemPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView9"
        android:layout_centerHorizontal="true"
        android:text="Enjoy" />

    <TextView
        android:id="@+id/itemName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/downButton"
        android:layout_centerHorizontal="true"
        android:text="Welcome"
        android:textSize="18sp" />

</RelativeLayout>

