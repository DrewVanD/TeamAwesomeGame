<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".playerStats">

    <Button
        android:id="@+id/exitButton"
        android:layout_width="134dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="112dp"
        android:background="@android:color/background_dark"
        android:text="Main Menu"
        android:textColor="@android:color/holo_orange_dark"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        app:srcCompat="@drawable/stats" />

    <TextView
        android:id="@+id/playerStats"
        android:layout_width="232dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="69dp"
        android:ems="10"
        android:gravity="center_horizontal|center"
        android:inputType="textPersonName"
        android:text="Stats"
        android:textAllCaps="true"
        android:textColor="@android:color/black"
        android:textSize="36sp"
        android:textStyle="bold|italic" />

    <TextView
        android:id="@+id/money"
        android:layout_width="wrap_content"
        android:layout_height="37dp"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/moneyMultiplier"
        android:layout_marginTop="170dp"
        android:background="@android:color/transparent"
        android:gravity="center_vertical"
        android:text="Money"
        android:textAllCaps="true"
        android:textColor="@android:color/background_dark"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/moneyMultiplier"
        android:layout_width="wrap_content"
        android:layout_height="37dp"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/stamina"
        android:layout_marginTop="217dp"
        android:background="@android:color/transparent"
        android:gravity="center_vertical"
        android:text="Money X"
        android:textAllCaps="true"
        android:textColor="@android:color/background_dark"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/dmg"
        android:layout_width="wrap_content"
        android:layout_height="37dp"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/money"
        android:layout_marginTop="263dp"
        android:background="@android:color/transparent"
        android:gravity="center_vertical"
        android:text="Damage"
        android:textAllCaps="true"
        android:textColor="@android:color/background_dark"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/stamina"
        android:layout_width="wrap_content"
        android:layout_height="37dp"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="74dp"
        android:background="@android:color/transparent"
        android:gravity="center_vertical"
        android:text="Stamina"
        android:textAllCaps="true"
        android:textColor="@android:color/background_dark"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/stmRegen"
        android:layout_width="wrap_content"
        android:layout_height="37dp"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/money"
        android:layout_marginBottom="266dp"
        android:background="@android:color/transparent"
        android:gravity="center_vertical"
        android:text="Stamina Regen"
        android:textAllCaps="true"
        android:textColor="@android:color/background_dark"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/health"
        android:layout_width="wrap_content"
        android:layout_height="37dp"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/money"
        android:layout_marginBottom="218dp"
        android:background="@android:color/transparent"
        android:gravity="left|center_vertical"
        android:text="Health "
        android:textAllCaps="true"
        android:textColor="@android:color/background_dark"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/knockout"
        android:layout_width="wrap_content"
        android:layout_height="37dp"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/money"
        android:layout_marginBottom="173dp"
        android:background="@android:color/transparent"
        android:gravity="center_vertical"
        android:text="Times KOed"
        android:textAllCaps="true"
        android:textColor="@android:color/background_dark"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/moneyStat"
        android:layout_width="74dp"
        android:layout_height="36dp"
        android:layout_alignStart="@+id/multiplierStat2"
        android:layout_alignTop="@+id/money"
        android:background="@android:color/background_dark"
        android:gravity="center_vertical|center_horizontal"
        android:text="$"
        android:textAllCaps="true"
        android:textColor="@android:color/holo_orange_dark"
        android:textSize="24sp"
        android:textStyle="bold"
        tools:background="@android:color/background_dark" />

    <TextView
        android:id="@+id/multiplierStat2"
        android:layout_width="74dp"
        android:layout_height="36dp"
        android:layout_alignStart="@+id/knockOuts"
        android:layout_alignTop="@+id/moneyMultiplier"
        android:background="@android:color/background_dark"
        android:gravity="center_vertical|center_horizontal"
        android:text="1X"
        android:textAllCaps="true"
        android:textColor="@android:color/holo_orange_dark"
        android:textSize="24sp"
        android:textStyle="bold"
        tools:background="@android:color/background_dark" />

    <TextView
        android:id="@+id/knockOuts"
        android:layout_width="74dp"
        android:layout_height="36dp"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/knockout"
        android:layout_marginEnd="71dp"
        android:background="@android:color/background_dark"
        android:gravity="center_vertical|center_horizontal"
        android:text="0KOs"
        android:textAllCaps="true"
        android:textColor="@android:color/holo_orange_dark"
        android:textSize="18sp"
        android:textStyle="bold"
        tools:background="@android:color/background_dark" />

    <TextView
        android:id="@+id/dmgMulti3"
        android:layout_width="74dp"
        android:layout_height="36dp"
        android:layout_alignStart="@+id/knockOuts"
        android:layout_alignTop="@+id/dmg"
        android:background="@android:color/background_dark"
        android:gravity="center_vertical|center_horizontal"
        android:text="10POW"
        android:textAllCaps="true"
        android:textColor="@android:color/holo_orange_dark"
        android:textSize="18sp"
        android:textStyle="bold"
        tools:background="@android:color/background_dark" />

    <TextView
        android:id="@+id/stM"
        android:layout_width="74dp"
        android:layout_height="36dp"
        android:layout_alignStart="@+id/knockOuts"
        android:layout_centerVertical="true"
        android:background="@android:color/background_dark"
        android:gravity="center_vertical|center_horizontal"
        android:text="100STM"
        android:textAllCaps="true"
        android:textColor="@android:color/holo_orange_dark"
        android:textSize="18sp"
        android:textStyle="bold"
        tools:background="@android:color/background_dark" />

    <TextView
        android:id="@+id/Health"
        android:layout_width="73dp"
        android:layout_height="35dp"
        android:layout_alignStart="@+id/knockOuts"
        android:layout_alignTop="@+id/health"
        android:background="@android:color/background_dark"
        android:gravity="center_vertical|center_horizontal"
        android:text="100+"
        android:textAllCaps="true"
        android:textColor="@android:color/holo_orange_dark"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/5RGN"
        android:layout_width="73dp"
        android:layout_height="35dp"
        android:layout_alignEnd="@+id/playerStats"
        android:layout_alignTop="@+id/stmRegen"
        android:layout_marginEnd="-16dp"
        android:background="@android:color/background_dark"
        android:gravity="center_vertical|center_horizontal"
        android:text="5RGN"
        android:textAllCaps="true"
        android:textColor="@android:color/holo_orange_dark"
        android:textSize="18sp"
        android:textStyle="bold" />

</RelativeLayout>